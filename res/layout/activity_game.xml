<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e67e22"
    android:columnCount="1"
    android:orientation="horizontal"
    tools:context="pt.utl.ist.cmov.bomberman.activities.GameActivity" >

    <LinearLayout
        android:layout_width="120sp"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom"
            android:columnCount="3"
            android:gravity="bottom" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <ImageButton
                    android:id="@+id/button_up"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_column="0"
                    android:background="@drawable/arrow_up"
                    android:gravity="center"
                    android:onClick="upClick" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <ImageButton
                    android:id="@+id/button_left"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_column="0"
                    android:background="@drawable/arrow_left"
                    android:gravity="center"
                    android:onClick="leftClick" />

                <TextView
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_column="1" />

                <ImageButton
                    android:id="@+id/button_right"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_column="2"
                    android:background="@drawable/arrow_right"
                    android:gravity="center"
                    android:onClick="rightClick" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <ImageButton
                    android:id="@+id/button_down"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_column="0"
                    android:background="@drawable/arrow_down"
                    android:gravity="center"
                    android:onClick="downClick" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <pt.utl.ist.cmov.bomberman.activities.views.MainGamePanel
        android:id="@+id/game_panel"
        android:layout_width="336dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.54" />

    <LinearLayout
        android:layout_width="120sp"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_bomb"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:background="@color/black"
                android:onClick="bombClick"
                android:text="Bomb"
                android:textAlignment="center"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>